[color]
	ui = auto
[core]
	editor = nvim
    autocrlf = input
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
    keepBackup = false
[diff]
	tool = vimdiff
[commit]
	gpgsign = true
[alias]
	a = add
	c = commit
	ch = checkout
	d = diff
	f = fetch
	l = log
	m = merge
	pl = pull
	ps = push
	s = status
	st = stash
	r = remote
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
