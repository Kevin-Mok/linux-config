snippet al "Align (math)" b
\begin{align*}
	$0
\end{align*}
endsnippet

snippet pwf "Piecewise function" b
\[
	${1:name} = \left.
	\begin{cases}
		${2:equation}, & ${3:condition} \\\\
	\end{cases}
	\right\\}
\]
endsnippet

snippet int "Integral" i
\int_{${1:lower}}^{${2:upper}} \, \mathrm{d}${3:x}	
endsnippet

snippet ie "In-line equation" i
$$1$$2
endsnippet
